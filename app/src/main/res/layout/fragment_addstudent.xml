<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F5EEEE">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/login_layout_padding"
            android:paddingTop="@dimen/login_layout_padding_top"
            android:paddingRight="@dimen/login_layout_padding"
            android:weightSum="1">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:foregroundTint="@color/gray"
                app:passwordToggleTint="@color/gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_addstud_name"
                    style="@style/RegistrationEditTextStyle"
                    android:layout_gravity="center_horizontal"
                    android:hint="Name"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#c4c4c4"
                    android:textColorLink="#c4c4c4" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:foregroundTint="@color/gray"
                app:passwordToggleTint="@color/gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_addstud_address"
                    style="@style/RegistrationEditTextStyle"
                    android:layout_gravity="center_horizontal"
                    android:hint="Address"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#c4c4c4"
                    android:textColorLink="#c4c4c4" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:foregroundTint="@color/gray"
                app:passwordToggleTint="@color/gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_addstud_pname"
                    style="@style/RegistrationEditTextStyle"
                    android:layout_gravity="center_horizontal"
                    android:hint="Parent Name"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#c4c4c4"
                    android:textColorLink="#c4c4c4" />

            </android.support.design.widget.TextInputLayout>
            <!--
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            app:passwordToggleTint="@color/gray"
            android:foregroundTint="@color/gray">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_addadmin_phno"
                style="@style/RegistrationEditTextStyle"
                android:layout_gravity="center_horizontal"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="#000000"
                android:textColorHighlight="#c4c4c4"
                android:textColorLink="#c4c4c4" />

        </android.support.design.widget.TextInputLayout>
-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:foregroundTint="@color/gray"
                app:passwordToggleTint="@color/gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_addstud_studid"
                    style="@style/RegistrationEditTextStyle"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Student Reg No"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#c4c4c4"
                    android:textColorLink="#c4c4c4" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:foregroundTint="@color/gray"
                app:passwordToggleTint="@color/gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_addstud_class"
                    style="@style/RegistrationEditTextStyle"
                    android:layout_gravity="center_horizontal"
                    android:hint="Class"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#c4c4c4"
                    android:textColorLink="#c4c4c4" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spinner_addadmin_class"
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </Spinner>

            <Button
                android:id="@+id/btn_addadmin_chooseimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/login_button_margin"
                android:layout_marginTop="@dimen/login_button_margin"
                android:layout_marginRight="@dimen/login_button_margin"
                android:background="@drawable/btnbg_red"
                android:text="Choose Image"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/addstudent_choosen_imageview"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <Button
                android:id="@+id/btn_addstud_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/login_button_margin"
                android:layout_marginTop="@dimen/login_button_margin"
                android:layout_marginRight="@dimen/login_button_margin"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btnbg_red"
                android:text="ADD"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>


</RelativeLayout>